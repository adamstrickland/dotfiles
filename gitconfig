	enabled = true
	autoupdate = true
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[gpg]
	program = gpg
	format = ssh
[init]
	defaultBranch = main
[column]
	ui = auto
[fetch]
	writeCommitGraph = true
