" functions
source ~/.vim/config/functions.vim

" global settings, etc
source ~/.vim/config/globals.vim

" packages/plugins/bundles
source ~/.vim/config/bundles.vim

" key mappings (duh)
source ~/.vim/config/keymappings.vim

" modifications/additions to filetype groups
" Note that filetype-specific configuration is in
" ../after/ftplugin/FILETYPE.vim
source ~/.vim/config/autogroups.vim

