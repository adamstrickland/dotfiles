# pkill () {
#   lsof -nP -i4TCP:$1 | grep LISTEN | cut -f 2 -d ' ' | xargs kill -9
# }
portpid () {
  lsof -nP -i4TCP:$1 | grep LISTEN
}
alias ppd=portpid
portkill () {
  portpid $1 | awk '{print $2}' | xargs kill -TERM
}
alias ppk=portkill
alias omzg="alias | grep"
