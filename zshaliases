alias quietdep="sed -i -- 's/^.*ActiveSupport::Deprecation\.warn.*$//' /Users/adamstrickland/.rvm/rubies/ruby-2.5.1/lib/ruby/gems/2.5.0/gems/stitchfix-core_models-14.22.0/lib/stitch_fix/core_models/client_scalar_attributes.rb"
opensourcedir() {
  cd ~/src/$1 && git pull origin --rebase && vi
}
alias osd=opensourcedir
alias beg="be guard"
alias gG="guard -G ./.Guardfile"
pskill () {
  psg $1 | grep -v grep | awk '{print $2}' | xargs kill -TERM
}
alias psk=pskill

function fh() {
  eval $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed 's/ *[0-9]* *//')
}

